# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Configuration
PORT=5050
NODE_ENV=production

# JWT Configuration (Generate a secure 64+ character secret)
JWT_SECRET=your_jwt_secret_must_be_at_least_32_characters_long_and_cryptographically_secure

# Email Configuration (Gmail SMTP)
GMAIL_USER=your-app-email@gmail.com
GMAIL_PASS=your-16-character-app-password

# Security Configuration
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://your-frontend-domain.com

# Optional: Redis for session storage (recommended for production)
# REDIS_URL=redis://localhost:6379